<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="theme_key">dark_theme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimaryDarkDefault</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDarkDefaultStatus</item>
        <item name="colorAccent">@color/colorAccentDarkDefault</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>