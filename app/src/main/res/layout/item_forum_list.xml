<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground">

    <ImageView
        android:id="@+id/item_forum_image_view_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:contentDescription="@string/forum_icon_desc"
        android:foreground="?selectableItemBackground"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/item_forum_text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        android:tag="text_color|primary_text,text_size|subheading"
        android:textSize="@dimen/text_size_subhead" />

    <TextView
        android:id="@+id/item_forum_text_view_secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_forum_text_view_title"
        android:layout_marginStart="72dp"
        android:tag="text_color|secondary_text,text_size|body"
        android:textSize="@dimen/theme_default_text_size_body" />
</RelativeLayout>